<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.EnterPhoneNumberFragment">

    <EditText
        android:id="@+id/register_edit_input_phone_number"
        style="@style/editText"
        android:layout_marginHorizontal="@dimen/huge_horizontal_margin"
        android:layout_marginTop="100dp"
        android:autofillHints="Введите свой номер телефона"
        android:backgroundTint="@color/colorGrey"
        android:inputType="phone"
        android:textColorHint="@color/colorGrey"
        android:textSize="@dimen/largeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/hintNotingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/enter_phone_notig_text"
        app:layout_constraintEnd_toEndOf="@id/register_edit_input_phone_number"
        app:layout_constraintStart_toStartOf="@id/register_edit_input_phone_number"
        app:layout_constraintTop_toBottomOf="@id/register_edit_input_phone_number" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/register_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_margin"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>